<?xml version="1.0"?>

<rules>
    <rule>
        <id>rule_still</id>
        <formula>
            <forall var = "v1" in = "latest">
                <bfunction name="notStill">
                    <param pos="1" var="v1"/>
                </bfunction>
            </forall>
        </formula>
        <resovler>
            <strategy>drop-latest</strategy>
            <group>0</group>
            <priority>0</priority>
        </resovler>
    </rule>

    <rule>
        <id>rule_order_blue</id>
        <formula>
            <forall var = "v1" in = "bluecar1">
                <not>
                    <and>
                        <exists var="v2" in="bluecar2">
                            <bfunction name="earlier_than">
                                <param pos="1" var="v1"/>
                                <param pos="2" var="v2"/>
                            </bfunction>
                        </exists>
                        <not>
                            <exists var="v3" in="bluecar3">
                                <bfunction name="prev_location">
                                    <param pos="1" var="v1"/>
                                    <param pos="2" var="v3"/>
                                </bfunction>
                            </exists>
                        </not>
                    </and>
                </not>
            </forall>
        </formula>
        <resovler>
            <strategy>drop-latest</strategy>
            <group>1</group>
            <priority>1</priority>
        </resovler>
    </rule>

    <rule>
        <id>rule_double_blue</id>
        <formula>
            <forall var = "v1" in = "bluecar4">
                <not>
                    <exists var="v2" in="bluecar5">
                        <and>
                            <not>
                                <bfunction name = "sameLoc">
                                    <param pos="1" var="v1"/>
                                    <param pos="2" var="v2"/>
                                </bfunction>
                            </not>
                            <bfunction name = "sameTime">
                                <param pos="1" var="v1"/>
                                <param pos="2" var="v2"/>
                            </bfunction>
                        </and>
                    </exists>
                </not>
            </forall>
        </formula>
        <resovler>
            <strategy>drop-latest</strategy>
            <group>1</group>
            <priority>2</priority>
        </resovler>
    </rule>
</rules>